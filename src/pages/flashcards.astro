---
import Layout from "../layouts/Layout.astro";
import { SavedFlashcardsList } from "../components/SavedFlashcardsList";

export const prerender = false;
---

<Layout title="Moje fiszki" showNavigation={true}>
  <div class="container mx-auto px-4 py-8 max-w-4xl">
    <div class="mb-8">
      <h1 class="text-4xl font-bold mb-2">Moje fiszki</h1>
      <p class="text-muted-foreground">Zarządzaj swoimi zapisanymi fiszkami - edytuj lub usuwaj według potrzeb.</p>
    </div>

    <SavedFlashcardsList client:load />
  </div>
</Layout>
